{
    "compilerOptions": {
      "target": "es2020",
      "module": "nodenext",
      "skipLibCheck": true,
      "moduleResolution": "nodenext",
      "outDir": "./build",
      "esModuleInterop": true,
      "forceConsistentCasingInFileNames": true,
      "strict": true,
      "noUnusedLocals": true,
      "noUnusedParameters": true,
      "noImplicitReturns": true,
      "noImplicitAny": true,
      "noFallthroughCasesInSwitch": true
    },
    "include": ["src"]
  }